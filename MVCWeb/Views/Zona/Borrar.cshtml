@model CommonSolution.DTOs.DTO_Zona

@{
    ViewBag.Title = "Borrar";
}

<h2>Borrar</h2>

<h3>¿Estás seguro que quieres cambiar el estado de la zona?</h3>
@Html.ValidationMessage("MsgReport", new { @class = "text-danger-validate" })
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.numero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numero)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.color)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.color)
        </dd>

    </dl>

    @using (Html.BeginForm("CambiarEstado", "Zona", new { numero = Model.numero}))
