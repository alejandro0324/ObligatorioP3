@model CommonSolution.DTOs.DTO_Reclamo

@{
    ViewBag.Title = "EditarCuadrilla";
}

<h2>Editar cuadrilla de reclamo</h2>

@using (Html.BeginForm("EditarCuadrillaSubmit", "ReclamoInterno"))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div class="form-group">
        <p>Número de reclamo:</p>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.numero)
        </div>
    </div>

    <div class="form-group">
        <p>Seleccione una cuadrilla de la zona</p>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.cuadrilla, new SelectList(ViewBag.cuadrillas, "numero", "nombre"), htmlAttributes: new { @class = "select" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Listar")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
