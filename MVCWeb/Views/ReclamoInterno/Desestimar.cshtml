@model CommonSolution.DTOs.DTO_Reclamo

@{
    ViewBag.Title = "Desestimar";
}

<h2>¿Quieres desestimar este reclamo?</h2>

@using (Html.BeginForm("DesestimarSubmit", "ReclamoInterno"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <p>Número de reclamo:  @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @readonly = "readonly" } })</p>
        </div>
        <br>
        <div class="form-group">
            <p>Agregar comentario: (opcional)</p>
            @Html.TextAreaFor(model => model.comentarioFuncionario, 7, 50, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar" class="btn btn-default" />
            </div>
            <div>
                @Html.ActionLink("Volver a la lista", "Listar")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
